{{#if newLogin}}
  <form>
    <div class='form-group'>
      <label>Enter Email:</label>
      {{input value=email id='email' class='form-control'}}
    </div>
    <div class='form-group'>
      <label>Enter Password:</label>
      {{input value=password id='password' class='form-control' type="password"}}
    </div>
    <button class='btn btn-primary button-inline'{{action "signIn"}}>Sign in</button>
  </form>
{{else}}
  <button class='btn btn-info' {{action 'showLoginForm'}}>Login</button>
{{/if}}
